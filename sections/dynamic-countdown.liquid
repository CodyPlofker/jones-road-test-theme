{% schema %}
  {
    "name": "Countdown",
    "settings": [
      {
        "id": "image",
        "label": "Image",
        "type": "image_picker"
      },
      {
        "id": "imageAlt",
        "label": "Image alt",
        "type": "text"
      },
      {
        "default": "#f6efeb",
        "id": "backgroundColor",
        "label": "Background color",
        "type": "color"
      },
      {
        "id": "heading",
        "label": "Heading",
        "type": "text"
      },
      {
        "id": "ctaText",
        "label": "CTA text",
        "type": "text"
      },
      {
        "default": 1,
        "id": "day",
        "label": "Day",
        "max": 31,
        "min": 1,
        "step": 1,
        "type": "range"
      },
      {
        "default": 1,
        "id": "month",
        "label": "Month",
        "max": 12,
        "min": 1,
        "step": 1,
        "type": "range"
      },
      {
        "default": 0,
        "id": "hour",
        "label": "Hour",
        "max": 23,
        "min": 0,
        "step": 1,
        "type": "range"
      },
      {
        "default": 0,
        "id": "minute",
        "label": "Minute",
        "max": 59,
        "min": 0,
        "step": 1,
        "type": "range"
      },
      {
        "default": 2020,
        "id": "year",
        "label": "Year",
        "max": 2025,
        "min": 2020,
        "step": 1,
        "type": "range"
      }
    ],
    "presets": [
      {
        "category": "Content",
        "name": "Countdown"
      }
    ]
  }
{% endschema %}
{% include "countdown",
    backgroundColor: section.settings.backgroundColor,
    ctaText: section.settings.ctaText,
    day: section.settings.day,
    heading: section.settings.heading,
    hour: section.settings.hour,
    image: section.settings.image,
    imageAlt: section.settings.imageAlt,
    minute: section.settings.minute,
    month: section.settings.month,
    year: section.settings.year,
  %}
