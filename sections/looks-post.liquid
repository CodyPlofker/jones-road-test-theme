{% schema %}
  {
    "name": "Looks Post",
    "settings": [
      {
        "id": "shareLabel",
        "label": "Share Label",
        "type": "text",
        "default": "Share this look"
      },
      {
        "id": "copyLinkLabel",
        "label": "Copy Link Label",
        "type": "text",
        "default": "Share this look"
      },
      {
        "id": "copiedLabel",
        "label": "Copied Label",
