{% schema %}
  {
    "name": "Looks Posts",
    "settings": [
      {
        "type": "range",
        "id": "pageSize",
        "min": 1,
        "max": 50,
        "step": 1,
        "label": "Page Size",
        "default": 10
      },
      {
        "id": "shareLabel",
        "label": "Share Label",
        "type": "text",
        "default": "Share this look"
      },
      {
        "id": "copyLinkLabel",
        "label": "Copy Link Label",
        "type": "text",
        "default": "Share this look"
      },
      {
        "id": "copiedLabel",
        "label": "Copied Label",
        "type": "text",
        "default": "Copied"
      }
    ]
  }
{% endschema %}
{% paginate blog.articles by section.settings.pageSize %}
{% include 'looks-posts',
  posts: blog.articles,
  copiedLabel: section.settings.copiedLabel,
  copyLinkLabel: section.settings.copyLinkLabel,
  shareLabel: section.settings.shareLabel,
%}
{% endpaginate %}
