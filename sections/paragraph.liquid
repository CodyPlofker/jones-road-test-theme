{%- assign config = section.settings -%}

<div class="section__paragraph">
  <div class="section__paragraph-inner">
    {%- if config.heading != blank -%}
      <h2 class="section__paragraph-heading">{{ config.heading }}</h2>
    {%- endif -%}
    {%- if config.description != blank -%}
      <div class="section__paragraph-description text-underline">{{ config.description }}</div>
    {%- endif -%}
  </div>
</div>

{%- schema -%}
  {
    "name": "Paragraph",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [{ "name": "Paragraph" }]
  }
{%- endschema -%}