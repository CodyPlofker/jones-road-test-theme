{%- assign config = section.settings -%}

<div id="{{ config.id }}" class="product-banner" data-component="productBanner">
  <div class="product-banner__image {{ config.image_position_desktop }} {{ config.image_position_mobile }}">
    {%- if config.image_mobile != blank -%}
      {%- assign desktop_image_class = 'product-banner__image--desktop' -%}
      {{ config.image_mobile | image_url: width: 2048 | image_tag: width: 1024, class: 'product-banner__image--mobile', loading: 'lazy' }}
    {%- else -%}
      {%- assign desktop_image_class = 'product-banner__image--desktop show-mobile' -%}
    {%- endif -%}
    {%- if config.show_overlay -%} 
      <div class="product-banner__image--overlay"></div>
    {%- endif -%}
    {{ config.image_desktop | image_url: width: 2880 | image_tag: width: 1440, class: desktop_image_class, loading: 'lazy' }}
  </div>
  <div class="product-banner__content {{ config.position_mobile }} {{ config.position_desktop }}">
    <div class="product-banner__text {{ config.alignment_mobile }} {{ config.alignment_desktop }}">
      {%- if config.heading != blank -%}
        {%- assign heading = config.heading | remove: '<p>' | remove: '</p>' | newline_to_br -%}
        <h1 class="product-banner__heading {% if config.show_highlight %} highlight {% endif %}" style="--highlight: {{ config.heading_highlight }}; --color: {{ config.heading_color }};">
          <span class="text-underline">{{ heading }}</span>
        </h1>
      {%- endif -%}
      {%- if config.product != blank -%}
        {%- assign review_product = all_products[config.product] -%}
        {%- include 'review-stars' with class: 'product-banner__reviews', product: review_product, show_rating: true -%}
      {%- endif -%}
      {%- if config.description != blank -%}
        <div class="product-banner__description text-underline" style="--mobile: {{ config.mobile_desc_color }}; --desktop: {{ config.desktop_desc_color }};">
          {{ config.description }}
        </div>
      {%- endif -%}
      {%- if config.cta_text != blank -%}
        {%- assign is_permalink = false -%}
        {%- if config.cta_link contains '#' -%}
          {%- assign is_permalink = true -%}
        {%- endif -%}
        <a href="{{ config.cta_link }}" class="product-banner__button button {% if is_permalink %} js-smoothScroll {% endif %}" style="--bg: {{ config.cta_background }}; --color: {{ config.cta_color }};">
          {{ config.cta_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

