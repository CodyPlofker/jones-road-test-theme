      {
        "type": "select",
        "id": "position_desktop",
        "label": "Copy Position (desktop)",
        "options": [
          { "label": "Top Left", "value": "desktop-position-top desktop-position-left" },
          { "label": "Center Left", "value": "desktop-position-center desktop-position-left" },
          { "label": "Bottom Left", "value": "desktop-position-bottom desktop-position-left" },
          { "label": "Top Middle", "value": "desktop-position-top desktop-position-middle" },
          { "label": "Center Middle", "value": "desktop-position-center desktop-position-middle" },
          { "label": "Bottom Middle", "value": "desktop-position-bottom desktop-position-middle" },
          { "label": "Top Right", "value": "desktop-position-top desktop-position-right" },
          { "label": "Center Right", "value": "desktop-position-center desktop-position-right" },
          { "label": "Bottom Right", "value": "desktop-position-bottom desktop-position-right" }
        ]
      },
      {
        "type": "select",
        "id": "position_mobile",
        "label": "Copy Position (mobile)",
        "options": [
          { "label": "Copy at the Top", "value": "position-top" },
          { "label": "Copy in the Middle", "value": "position-middle" },
          { "label": "Copy at the Bottom", "value": "position-bottom" }
        ]
      },
      {
        "type": "select",
        "id": "alignment_desktop",
        "label": "Copy Alignment (desktop)",
        "options": [
          { "label": "Left", "value": "desktop-align-left" },
          { "label": "Center", "value": "desktop-align-center" },
          { "label": "Right", "value": "desktop-align-right" }
        ]
      },
      {
        "type": "select",
        "id": "alignment_mobile",
        "label": "Copy Alignment (mobile)",
        "options": [
          { "label": "Left", "value": "align-left" },
          { "label": "Center", "value": "align-center" },
          { "label": "Right", "value": "align-right" }
        ]
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image"
      },
      {
        "type": "checkbox",
        "id": "show_overlay",
        "label": "Show Image Overlay",
        "info": "Mobile only."
      },
      {
        "type": "header",
        "content": "Heading"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "heading_highlight",
        "label": "Heading Highlight",
        "default": "#fff"
      },
      {
        "type": "checkbox",
        "id": "show_highlight",
        "label": "Show Highlight"
      },
      {
        "type": "header",
        "content": "Description"
      },
      {
        "type": "product",
        "id": "product",
        "label": "Reviews Product",
        "info": "If no product is selected, the reviews won't show."
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "color",
        "id": "desktop_desc_color",
        "label": "Description Color (desktop)",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "mobile_desc_color",
        "label": "Description Color (mobile)",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "CTA"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_link",
