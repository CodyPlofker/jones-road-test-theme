        },
        {
          "type": "card",
          "settings": {
            "icon_type": "book",
            "category": "Guide",
            "title": "Clean Beauty 101",
            "description": "Learn what makes our ingredients different and why it matters for your skin.",
            "link_text": "Read More"
          }
        }
      ]
    }
  ]
}
{% endschema %}
