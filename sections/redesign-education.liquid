{%- assign config = section.settings -%}

<section class="redesign-education" style="
  --bg-color: {{ config.background_color }};
  --text-color: {{ config.text_color }};
  --heading-color: {{ config.heading_color }};
">
  <div class="redesign-education__container">
    <div class="redesign-education__header">
      {%- if config.heading != blank -%}
        <h2 class="redesign-education__heading">{{ config.heading }}</h2>
      {%- endif -%}
      {%- if config.subheading != blank -%}
        <p class="redesign-education__subheading">{{ config.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="redesign-education__grid" data-columns="{{ section.blocks.size | at_most: 4 }}">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="redesign-education__card" {{ block.shopify_attributes }}>
          <div class="redesign-education__card-media">
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            {%- else -%}
              <div class="redesign-education__card-placeholder"></div>
            {%- endif -%}

            {%- if block.settings.icon_type != 'none' -%}
              <span class="redesign-education__card-icon">
                {%- case block.settings.icon_type -%}
                  {%- when 'play' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                      <polygon points="5 3 19 12 5 21 5 3"></polygon>
                    </svg>
                  {%- when 'quiz' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                      <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                  {%- when 'book' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                      <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                    </svg>
                  {%- when 'palette' -%}
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="13.5" cy="6.5" r=".5"></circle>
                      <circle cx="17.5" cy="10.5" r=".5"></circle>
                      <circle cx="8.5" cy="7.5" r=".5"></circle>
                      <circle cx="6.5" cy="12.5" r=".5"></circle>
                      <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.555C21.965 6.012 17.461 2 12 2z"></path>
                    </svg>
                {%- endcase -%}
              </span>
            {%- endif -%}

            {%- if block.settings.badge != blank -%}
              <span class="redesign-education__card-badge">{{ block.settings.badge }}</span>
            {%- endif -%}
          </div>

          <div class="redesign-education__card-content">
            {%- if block.settings.category != blank -%}
              <span class="redesign-education__card-category">{{ block.settings.category }}</span>
            {%- endif -%}

            <h3 class="redesign-education__card-title">{{ block.settings.title }}</h3>

            {%- if block.settings.description != blank -%}
              <p class="redesign-education__card-description">{{ block.settings.description }}</p>
            {%- endif -%}

            <span class="redesign-education__card-link">
              {{ block.settings.link_text | default: 'Learn More' }}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .redesign-education {
    background: var(--bg-color);
    color: var(--text-color);
    padding: 48px 20px;
  }

  @media (min-width: 768px) {
    .redesign-education {
      padding: 80px 40px;
    }
  }

  .redesign-education__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .redesign-education__header {
    text-align: center;
    margin-bottom: 32px;
  }

  @media (min-width: 768px) {
    .redesign-education__header {
      margin-bottom: 48px;
    }
  }

  .redesign-education__heading {
    font-family: 'Canela', serif;
    font-size: 28px;
    font-weight: 300;
    color: var(--heading-color);
    margin: 0 0 12px;
  }

  @media (min-width: 768px) {
    .redesign-education__heading {
      font-size: 40px;
    }
  }

  .redesign-education__subheading {
    font-family: 'ArticulatCF', sans-serif;
    font-size: 15px;
    color: var(--text-color);
    opacity: 0.8;
    margin: 0;
  }

  /* Grid */
  .redesign-education__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 600px) {
    .redesign-education__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 900px) {
    .redesign-education__grid[data-columns="3"],
    .redesign-education__grid[data-columns="4"] {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1100px) {
    .redesign-education__grid[data-columns="4"] {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Card */
  .redesign-education__card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .redesign-education__card:hover {
    transform: translateY(-4px);
  }

  .redesign-education__card-media {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: #f5f5f5;
    margin-bottom: 16px;
  }

  .redesign-education__card-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .redesign-education__card:hover .redesign-education__card-media img {
    transform: scale(1.05);
  }

  .redesign-education__card-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  }

  .redesign-education__card-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .redesign-education__card:hover .redesign-education__card-icon {
    transform: translate(-50%, -50%) scale(1.1);
    background: #fff;
  }

  .redesign-education__card-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #000;
    color: #fff;
    padding: 6px 12px;
    font-family: 'BaseMonoWideWeb', monospace;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Content */
  .redesign-education__card-content {
    padding: 0 4px;
  }

  .redesign-education__card-category {
    display: block;
    font-family: 'BaseMonoWideWeb', monospace;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.6;
    margin-bottom: 8px;
  }

  .redesign-education__card-title {
    font-family: 'ArticulatCF', sans-serif;
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .redesign-education__card-description {
    font-family: 'ArticulatCF', sans-serif;
    font-size: 14px;
    line-height: 1.5;
    opacity: 0.8;
    margin: 0 0 12px;
  }

  .redesign-education__card-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'ArticulatCF', sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: gap 0.3s ease;
  }

  .redesign-education__card:hover .redesign-education__card-link {
    gap: 10px;
  }
</style>

