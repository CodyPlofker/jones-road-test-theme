{% style %}
  .secondary-announcement-bar--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-left: 45px;
    padding-right: 45px;
  }
  .secondary-announcement-bar--{{ section.id }} .secondary-announcement-bar__inner {
    height: 100%;
    display: flex;
    align-items: center;
    height: {{ section.settings.section_height_desktop }}px;
  }
  .secondary-announcement-bar--{{ section.id }} .secondary-announcement-bar__inner:empty {
    display: none;
  }
  .secondary-announcement-bar--{{ section.id }} .secondary-announcement-bar__heading{
    {% if section.settings.font_family_heading == 'rw' %}
      font-family: 'RingsideWideWeb', 'Helvetica', 'Arial', sans-serif;
    {% elsif section.settings.font_family_heading == 'gc' %}
      font-family: 'GeogrotesqueCondBoldWeb', 'Arial Black', 'Impact', sans-serif;
    {% elsif section.settings.font_family_heading == 'bm' %}
      font-family: 'BaseMonoWideWeb', 'Courier', 'Courier New', sans-serif;
    {% elsif section.settings.font_family_heading == 'cl' %}
      font-family: 'Canela', serif;
    {% elsif section.settings.font_family_heading == 'acf' %}
      font-family: "articulat-cf";
    {% elsif section.settings.font_family_heading == 'acfbold' %}
      font-family: "articulat-heavy-cf";
    {% endif %}
    font-weight: {{ section.settings.font_weight_heading }};
    font-size: {{ section.settings.font_size_heading }}px;
    color: {{ section.settings.heading_color }};
    line-height: 1;
  }
  .secondary-announcement-bar--{{ section.id }} .secondary-announcement-bar__content{
    {% if section.settings.font_family_content == 'rw' %}
      font-family: 'RingsideWideWeb', 'Helvetica', 'Arial', sans-serif;
    {% elsif section.settings.font_family_content == 'gc' %}
      font-family: 'GeogrotesqueCondBoldWeb', 'Arial Black', 'Impact', sans-serif;
    {% elsif section.settings.font_family_content == 'bm' %}
      font-family: 'BaseMonoWideWeb', 'Courier', 'Courier New', sans-serif;
    {% elsif section.settings.font_family_content == 'cl' %}
      font-family: 'Canela', serif;
    {% elsif section.settings.font_family_content == 'acf' %}
      font-family: "articulat-cf";
    {% elsif section.settings.font_family_content == 'acfbold' %}
      font-family: "articulat-heavy-cf";
    {% endif %}
    font-weight: {{ section.settings.font_weight_content }};
    font-size: {{ section.settings.font_size_content }}px;
    color: {{ section.settings.content_color }};
    line-height: 1.1;
  }
  .secondary-announcement-bar__content {
    display: flex;
    align-items: center;
  }
  .secondary-announcement-bar-text-align-desktop--center .secondary-announcement-bar__inner {
    justify-content: center;
  }
  .secondary-announcement-bar-text-align-desktop--right .secondary-announcement-bar__inner {
    justify-content: flex-end;
  }
  .secondary-announcement-bar-text-align-desktop--left .secondary-announcement-bar__inner {
    justify-content: flex-start;
  }
  .secondary-announcement-bar__content span{
    padding-right: {{ section.settings.separator_space }}px;
    padding-left: {{ section.settings.separator_space }}px;
    position: relative;
  }
  .secondary-announcement-bar__content.secondary-announcement-bar-separator span::before{
    content: "{{ section.settings.separator }}";
    position: absolute;
    left: -1px;
    top: 0;
    color: inherit;
    font-size: inherit;
    font-weight: inherit;
    font-family: inherit;
  }
  .secondary-announcement-bar__content.secondary-announcement-bar-separator span:first-child::before{
    display: none;
  }
  .secondary-announcement-bar__content.secondary-announcement-bar-separator span:last-child{
    padding-right: 0;
  }

  /* Countdown Styles */
  .secondary-announcement-bar--{{ section.id }} .secondary-announcement-bar__countdown {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-left: 15px;
    {% if section.settings.font_family_countdown == 'rw' %}
