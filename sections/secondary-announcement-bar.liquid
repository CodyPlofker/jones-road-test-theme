{% assign heading = blank %}
{% assign content = blank %}

{% comment %} Regional countdown settings from metaobject {% endcomment %}
{% comment %} Use 'not_set' sentinel for booleans since false == blank can be unreliable in Liquid {% endcomment %}
{% assign regional_hide_countdown = 'not_set' %}
{% assign regional_hide_bar_after_countdown = 'not_set' %}
{% assign regional_countdown_end_date = blank %}
{% assign regional_countdown_end_time = blank %}

{% for item in shop.metaobjects.secondary_announcement_bar.values %}
  {% if item.country == localization.country.currency.iso_code %}
    {% assign heading = item.heading %}
    {% assign content = item.content %}
    {% comment %} Capture regional countdown settings if available {% endcomment %}
    {% if item.hide_countdown == true or item.hide_countdown == false %}
      {% assign regional_hide_countdown = item.hide_countdown %}
    {% endif %}
    {% if item.hide_bar_after_countdown == true or item.hide_bar_after_countdown == false %}
      {% assign regional_hide_bar_after_countdown = item.hide_bar_after_countdown %}
    {% endif %}
    {% assign regional_countdown_end_date = item.countdown_end_date %}
    {% assign regional_countdown_end_time = item.countdown_end_time %}
  {% endif %}
{% endfor %}

{% comment %} Determine which countdown settings to use (regional takes priority, global is fallback) {% endcomment %}
{% if regional_countdown_end_date != blank %}
  {% assign use_countdown_end_date = regional_countdown_end_date %}
{% else %}
  {% assign use_countdown_end_date = section.settings.countdown_end_date %}
{% endif %}

{% if regional_countdown_end_time != blank %}
  {% assign use_countdown_end_time = regional_countdown_end_time %}
{% else %}
  {% assign use_countdown_end_time = section.settings.countdown_end_time %}
{% endif %}

{% comment %} For hide_countdown: regional boolean takes priority if explicitly set (true or false), otherwise use global {% endcomment %}
{% if regional_hide_countdown != 'not_set' %}
  {% assign use_hide_countdown = regional_hide_countdown %}
{% else %}
  {% assign use_hide_countdown = section.settings.hide_countdown %}
{% endif %}

{% comment %} For hide_bar_after_countdown: regional boolean takes priority if explicitly set, otherwise use global {% endcomment %}
{% if regional_hide_bar_after_countdown != 'not_set' %}
  {% assign use_hide_bar_after_countdown = regional_hide_bar_after_countdown %}
{% else %}
  {% assign use_hide_bar_after_countdown = section.settings.hide_bar_after_countdown %}
{% endif %}

{% if section.settings.hide_announcement_bar == false %}
  {% if heading != blank or content != blank %}
    <div class="secondary-announcement-bar secondary-announcement-bar-text-align-desktop--{{ section.settings.text_alignment_desktop }} secondary-announcement-bar-text-align-mobile--{{ section.settings.text_alignment_mobile }} secondary-announcement-bar--{{ section.id }}">
      <div class="secondary-announcement-bar__inner">
        {%- if section.settings.hide_heading == false -%}
          {%- if heading != blank -%}
            <h2 class="secondary-announcement-bar__heading">{{ heading }}</h2>
          {%- endif -%}
        {%- endif -%}
        {%- if section.settings.hide_content == false -%}
          {%- if content != blank -%}
            <div class="secondary-announcement-bar__content {% if section.settings.separator != blank %}secondary-announcement-bar-separator{% endif %}">
              {% for line in content.value %}
                <span class="secondary-announcement-bar__line">{{ line }}</span>
              {% endfor %}
            </div>
          {%- endif -%}
        {%- endif -%}
        {%- if use_hide_countdown == false and use_countdown_end_date != blank -%}
          <div class="secondary-announcement-bar__countdown" 
              data-component="announcementCountdown"
              data-end-date="{{ use_countdown_end_date }}" 
              data-end-time="{{ use_countdown_end_time }}"
              data-hide-bar-after-countdown="{{ use_hide_bar_after_countdown }}"
              data-section-id="{{ section.id }}">
            <div class="countdown-unit">
              <span class="countdown-digit countdown-days-1">0</span>
              <span class="countdown-digit countdown-days-2">0</span>
            </div>
            <span class="countdown-separator">:</span>
            <div class="countdown-unit">
              <span class="countdown-digit countdown-hours-1">0</span>
              <span class="countdown-digit countdown-hours-2">0</span>
            </div>
            <span class="countdown-separator">:</span>
            <div class="countdown-unit">
              <span class="countdown-digit countdown-minutes-1">0</span>
              <span class="countdown-digit countdown-minutes-2">0</span>
            </div>
            <span class="countdown-separator">:</span>
            <div class="countdown-unit">
              <span class="countdown-digit countdown-seconds-1">0</span>
              <span class="countdown-digit countdown-seconds-2">0</span>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  {% endif %}
{% endif %}

