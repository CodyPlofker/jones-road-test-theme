<div class="ba_main">
  <div class="container-ba before_after">
    <div class="image-container">
      <div class="before_img">
        <img
          class="image-before slider-image"
          src="{{ before_src }}"
          alt="color photo"
          width=""
          height=""
        >
      </div>
      <div class="after_img">
        <img
          class="image-after slider-image"
          src="{{ after_src }}"
          alt="black and white"
          width=""
          height=""
        >
      </div>
    </div>
    <!-- step="10" -->
    <input
      type="range"
      min="0"
      max="100"
      value="50"
      aria-label="Percentage of before photo shown"
      class="ba-slider"
    >
    <div class="slider-line" aria-hidden="true"></div>
    <div class="slider-button" aria-hidden="true">
      <svg xmlns="http://www.w3.org/2000/svg" width="6" height="6" viewBox="0 0 6 6" fill="none">
        <circle cx="3" cy="3" r="2.9" fill="#F2F2F2" fill-opacity="0.6" stroke="black" stroke-width="0.16"/>
        <path d="M2.6 3.9L1.9 3.2L2.6 2.5" stroke="black" stroke-width="0.16" stroke-linecap="square"/>
        <path d="M3.8 3.9L4.5 3.2L3.8 2.5" stroke="black" stroke-width="0.16" stroke-linecap="square"/>
      </svg>
    </div>
  </div>
</div>
