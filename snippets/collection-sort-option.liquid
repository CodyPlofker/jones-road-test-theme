{%- assign name = '' -%}
{%- case value -%}
  {%- when 'best-selling' -%}
    {%- assign name = 'Best Sellers' -%}
  {%- when 'manual' -%}
    {%- assign name = 'Featured' -%}
  {%- when 'price-ascending' -%}
    {%- assign name = 'Price: Low to High' -%}
  {%- when 'price-descending' -%}
    {%- assign name = 'Price: High to Low' -%}
  {%- when 'created-descending' -%}
    {%- assign name = 'New' -%}
{%- endcase -%}
{%- assign is_current = false -%}
{%- if value == current_sort -%}
  {%- assign is_current = true -%}
{%- endif -%}
<li>
  <input 
    name="sort" 
    id="{{ value }}"
    type="radio" 
    value="{{ value }}"
    data-url="{{ collection.url | append: '?sort_by=' | append: value }}"
    {% if is_current %} checked {% endif %} 
  />
  <label for="{{ value }}">
    <span class="selected-option-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="10" height="8" viewBox="0 0 10 8" fill="none">
        <path d="M9 1L3.5 6.5L1 4" stroke="black" stroke-width="1.6666" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </span>
    {{ name }}
  </label>
</li>