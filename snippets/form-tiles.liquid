<div class="form-tiles">
  <div class="form-tiles__image">
    <picture>
      <source media="(min-width: 1601px)"
              srcset="{{ image | img_url: '960x1152', scale: 1, crop: 'center' }} 1x,
                      {{ image | img_url: '960x1152', scale: 2, crop: 'center' }} 2x" />
      <source media="(min-width: 1281px) and (max-width: 1600px)"
              srcset="{{ image | img_url: '800x960', scale: 1, crop: 'center' }} 1x,
                      {{ image | img_url: '800x960', scale: 2, crop: 'center' }} 2x" />
      <source media="(min-width: 1024px) and (max-width: 1280px)"
              srcset="{{ image | img_url: '640x768', scale: 1, crop: 'center' }} 1x,
                      {{ image | img_url: '640x768', scale: 2, crop: 'center' }} 2x" />
      <source media="(max-width: 1023px) and (min-width: 769px)"
              srcset="{{ image | img_url: '1023x1128', scale: 2, crop: 'center' }}" />
      <source media="(max-width: 768px) and (min-width: 415px)"
              srcset="{{ image | img_url: '768x922', scale: 2, crop: 'center' }}" />
      <source media="(max-width: 414px) and (min-width: 376px)"
              srcset="{{ image | img_url: '414x497', scale: 2, crop: 'center' }}" />
      <source media="(max-width: 375px)"
              srcset="{{ image | img_url: '375x450', scale: 2, crop: 'center' }}" />
      <img src="{{ image | img_url: '375x450', scale: 2, crop: 'center' }}" alt="{{ image.alt }}" />
    </picture>
  </div>
  <div class="form-tiles__copy text-underline">
    <h2 class="form-tiles__heading">
      {{ heading }}
    </h2>
    {{ copy }}
    {{ markup }}
  </div>
</div>
