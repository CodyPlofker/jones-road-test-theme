{%- if true -%}
<li {{ post.shopify_attributes }}>
  {%- if ugcTileLink -%}
  <a target="_blank" rel="noopener noreferrer" href="{{ ugcTileLink }}">
  {%- else -%}
  <div>
  {%- endif -%}
    <picture>
      <source media="(min-width: 1601px)"
              srcset="{{ ugcTileImage | img_url: '480x480', scale: 2, crop: 'center' }} 2x,
                      {{ ugcTileImage | img_url: '480x480', scale: 1, crop: 'center' }} 1x" />
      <source media="(min-width: 1281px) and (max-width: 1600px)"
              srcset="{{ ugcTileImage | img_url: '400x400', scale: 2, crop: 'center' }} 2x,
                      {{ ugcTileImage | img_url: '400x400', scale: 1, crop: 'center' }} 1x" />
      <source media="(min-width: 1024px) and (max-width: 1280px)"
              srcset="{{ ugcTileImage | img_url: '320x320', scale: 2, crop: 'center' }} 2x,
                      {{ ugcTileImage | img_url: '320x320', scale: 1, crop: 'center' }} 1x" />
      <source media="(min-width: 601px) and (max-width: 1023px)"
              srcset="{{ ugcTileImage | img_url: '682x682', scale: 2, crop: 'center' }}" />
      <source media="(min-width: 415px) and (max-width: 600px)"
              srcset="{{ ugcTileImage | img_url: '400x400', scale: 2, crop: 'center' }}" />
      <source media="(min-width: 376px) and (max-width: 414px)"
              srcset="{{ ugcTileImage | img_url: '276x276', scale: 2, crop: 'center' }}" />
      <source media="(max-width: 375px)"
              srcset="{{ ugcTileImage | img_url: '250x250', scale: 2, crop: 'center' }}" />
      <img class="is-loading" src="{{ ugcTileImage | img_url: '250x250', scale: 2, crop: 'center' }}" alt="{{ ugcTileImage.alt }}" />
    </picture>
  {%- if ugcTileLink -%}
  </a>
  {%- else -%}
  </div>
  {%- endif -%}
</li>
{%- endif -%}
