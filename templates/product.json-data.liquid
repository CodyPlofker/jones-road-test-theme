              {% for recommended_variant in recommended_variants %}
                {% assign recommended_product = recommended_variant.product %}
                {% assign recommended_product_image = recommended_product.featured_image.src | img_url: 'grande' %}
                {% assign recommended_product_title = recommended_product.title %}
                {% assign swatch_override = false %}

                {% if recommended_variant.metafields.swatch.color != blank %}
                  {% assign swatch_override = recommended_variant.metafields.swatch.color %}
                {% endif %}
                {% if recommended_variant.metafields.swatch.image != blank %}
                  {% assign swatch_override = recommended_variant.metafields.swatch.image | image_url: width: 100, height: 100 %}
                {% endif %}

                {% assign fallback_swatch = '' %}
                {% if swatch_override == false %}
                  {% for s in swatches %}
                    {% assign swatch = s | split: '==' %}
                    {% assign swatch_name = swatch | first | strip %}
                    {% assign swatch_value = swatch | last | strip %}
                    {% if swatch_name == recommended_variant.title %}
                      {% assign fallback_swatch = swatch_value | remove_first: '#' %}
                      {% break %}
                    {% endif %}
                  {% endfor %}
                {% endif %}

                {
                  "id": "{{ recommended_variant.id }}",
                  "title": "{{ recommended_variant.title }}",
                  "recommended_product_id": "{{ recommended_product.id }}",
                  "recommended_product_title": "{{ recommended_product.title }}",
                  "swatch": {% if swatch_override != false %}"{{ swatch_override }}"{% elsif fallback_swatch contains '.' %}"{{ fallback_swatch }}"{% else %}"{{ fallback_swatch | prepend: '#' }}"{% endif %}{% if forloop.first %},{% endif  %}

