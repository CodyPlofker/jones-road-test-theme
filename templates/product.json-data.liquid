                          {%- endif -%}

                          {%- assign how_to_override = variant.metafields.how_to.how_to_text -%}
                          {%- assign ingredients_override = variant.metafields.ingredients.ingredients -%}

                          {%- if how_to_override != blank -%}
                            {%- assign variant_how_to = how_to_override.value -%}
