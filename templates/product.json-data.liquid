                      "image": "https:{{ recommended_product_image }}",
                      "url": "{{ recommended_product.url | append: '?country=' | append: localization.country.iso_code }}",
                      "brand": "{{ recommended_product.vendor }}",
                      "price": "{{ recommended_product.price | money_without_trailing_zeros }}",
