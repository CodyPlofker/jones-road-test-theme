                            {%- assign variant_ingredients = product.metafields.ingredients.ingredients.value -%}
                          {%- endif -%}

                          {%- assign recommended_findation_description = variant.metafields.findation_hero.description -%}

                          {% assign recommended_swatch_override = false %}

                          {% if variant.metafields.swatch.color != blank %}
                            {% assign recommended_swatch_override = variant.metafields.swatch.color %}
                          {% endif %}
                          {% if variant.metafields.swatch.image != blank %}
                            {% assign recommended_swatch_override = variant.metafields.swatch.image | image_url: width: 500 %}
